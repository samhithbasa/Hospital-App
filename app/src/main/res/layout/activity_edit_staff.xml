<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_staff_title"
            android:textSize="24sp"
            android:textStyle="bold"
            android:gravity="center"
            android:layout_marginBottom="24dp"
            android:textColor="@color/primary_color" />

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardElevation="4dp"
            app:cardCornerRadius="8dp"
            android:layout_marginBottom="16dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="16dp">

                <TextView android:text="@string/label_name" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/nameEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPersonName"
                    android:hint="@string/hint_name"
                    android:importantForAccessibility="yes"
                    android:autofillHints="name"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:contentDescription="Name field"
                    android:layout_marginBottom="16dp" />

                <TextView android:text="@string/label_role"  android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/roleEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/hint_role"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:autofillHints="jobTitle"
                    android:contentDescription="Role field"
                    android:layout_marginBottom="16dp" />

                <TextView android:text="@string/label_department"  android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/departmentEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="text"
                    android:hint="@string/hint_department"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:autofillHints="organization"
                    android:contentDescription="Department field"
                    android:layout_marginBottom="16dp" />

                <TextView android:text="@string/label_email" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/emailEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textEmailAddress"
                    android:hint="@string/hint_email"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:autofillHints="emailAddress"
                    android:contentDescription="Email field"
                    android:layout_marginBottom="16dp" />

                <TextView android:text="@string/label_phone" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/phoneEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="@string/hint_phone"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:autofillHints="phone"
                    android:contentDescription="Phone number field"
                    android:layout_marginBottom="16dp" />

                <TextView android:text="@string/label_join_date" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/joinDateEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="date"
                    android:hint="@string/hint_join_date"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:contentDescription="Join date field"
                    android:layout_marginBottom="16dp" />

                <TextView android:text="@string/label_address" android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    />
                <EditText
                    android:id="@+id/addressEditText"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:inputType="textPostalAddress"
                    android:hint="@string/hint_address"
                    android:minHeight="48dp"
                    android:padding="8dp"
                    android:autofillHints="postalAddress"
                    android:contentDescription="Address field"
                    android:layout_marginBottom="16dp" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <Button
            android:id="@+id/updateBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_save_changes"
            android:backgroundTint="@color/colorPrimary"
            android:textColor="@android:color/white"
            android:minHeight="48dp"
            android:layout_marginBottom="8dp" />

        <Button
            android:id="@+id/backBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/button_cancel"
            android:backgroundTint="@android:color/darker_gray"
            android:textColor="@android:color/white"
            android:minHeight="48dp" />
    </LinearLayout>
</ScrollView>
