<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:background="@color/white"
    tools:context=".SecondActivity">

    <!-- Welcome Message -->
    <com.google.android.material.switchmaterial.SwitchMaterial
        android:id="@+id/darkModeSwitch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end"
        android:text="Dark Mode"
        android:layout_marginBottom="8dp"/>

    <!-- Main Buttons Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="@drawable/card_background"
        android:padding="16dp"
        android:elevation="2dp"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/welcomeText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:text="Admin Dashboard"
            android:textColor="@color/primary_color"
            android:textAlignment="center"
            android:textSize="24sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <!-- Manage Patients Button -->
            <Button
                android:id="@+id/managePatientsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Patients"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="16dp"/>

            <!-- Manage Staff Button -->
            <Button
                android:id="@+id/manageStaffBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Staff"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="16dp"/>

            <!-- Manage Appointments Button -->
            <Button
                android:id="@+id/manageAppointmentsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Manage Appointments"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="16dp"/>

            <!-- View Reports Button -->
            <Button
                android:id="@+id/reportsBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Reports"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="16dp"/>

            <Button
                android:id="@+id/syncDataBtn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Sync Data from Cloud"
                android:textSize="18sp"
                android:backgroundTint="@color/primary_color"
                android:textColor="@android:color/white"
                android:layout_marginBottom="16dp"
                android:padding="16dp"/>
        </LinearLayout>

    </LinearLayout>

    <Button
        android:id="@+id/backBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Back"
        android:layout_marginTop="16dp"
        android:backgroundTint="@android:color/darker_gray"
        android:textColor="@android:color/white"
        android:textAllCaps="false"
        android:elevation="2dp"/>

    <!-- Logout Button at bottom -->
    <Button
        android:id="@+id/logoutBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Logout"
        android:textSize="18sp"
        android:backgroundTint="@color/red"
        android:textColor="@color/white"
        android:layout_marginTop="16dp"
        android:padding="16dp"/>

</LinearLayout>
